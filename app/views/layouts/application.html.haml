!!! 5
%html
  /[if lt IE 7]   <html class="no-js lt-ie9 lt-ie8 lt-ie7">
  /[if IE 7]      <html class="no-js lt-ie9 lt-ie8">
  /[if IE 8]      <html class="no-js lt-ie9">
  /[if gt IE 8]   <html class="no-js">
  %head
    %title= get_head_title
    = include_gon
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport",    content: "width=device-width" }
    %meta{ name: "keywords",    content: get_keywords }
    %meta{ name: "description", content: get_description }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    = stylesheet_link_tag    "application", action_name,:media => "all"
    - if action_name == "filterArticle"
      %script(src='/assets/require.js' data-main="/assets/filterArticle")
    - else
      %script(src='/assets/require.js' data-main="/assets/dashboard")
      / = javascript_include_tag "application", action_name
    = csrf_meta_tags
  %body
    = render "layouts/ie7_check"
    = render "layouts/header"
    .mainContainer= yield
    .lessMoreBtn
      %a#lessInfoBtn{:href => "#"}
        %span.spritebg.moreIcon
        展开更多详情
    = render "layouts/footer"