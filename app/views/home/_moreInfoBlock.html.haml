      %h2 网站 TOP10
    %section.chartTabs
      %ul
        %li
          %a#top10ChartTab1.radiusBtn.currentChartTabBtn{:href => "#"} 今天
        %li
          %a#top10ChartTab2.radiusBtn.chartTabBtn{:href => "#"} 昨天
        %li
