        %table
          %thead
            %td
            %th.darkGreyThBg{:scope => "col"} 内容
            %th{:scope => "col"} 媒体
            %th{:scope => "col"} 时间
            %td
          %tbody
            - @weiboTable1.each_with_index do |weibo,index|
              %tr{ class: index%2 == 1 ? "" : ".evenRow" }
                %th
                  %span.weiboIcon16.spritebg
                %td.weiboTableContent= weibo[:content]
                %td= weibo[:meiti]
                %td.weiboTimeTd= weibo[:cteated_at]
                %td
